# Ipv6 Support
CONFIG_PACKAGE_6in4=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_ip6tables-extra=y
CONFIG_PACKAGE_ip6tables-mod-nat=y

# ==================== luci-app-ipsec-vpnd 主插件及LuCI依赖 ====================
CONFIG_PACKAGE_luci-app-ipsec-vpnd=y
CONFIG_PACKAGE_luci-mod-admin-full=y  # LuCI后台基础依赖（必选）
CONFIG_PACKAGE_luci-theme-bootstrap=y # 基础LuCI主题（适配插件界面，必选）
CONFIG_PACKAGE_luci-i18n-ipsec-vpnd-zh-cn=y # 中文语言包（可选，建议添加）

# ==================== 底层核心服务依赖（xl2tpd + ipsec-tools 核心栈） ====================
CONFIG_PACKAGE_xl2tpd=y              # L2TP 核心服务（ipsec-vpnd 核心依赖，必选）
CONFIG_PACKAGE_ipsec-tools=y         # IPSec 工具集（加密认证核心，必选）
CONFIG_PACKAGE_racoon=y              # ipsec-tools 配套IKE守护进程（处理IKEv1协商，必选）

# ==================== 内核IPSec模块依赖（处理加密流量转发，必选） ====================
CONFIG_PACKAGE_kmod-ipsec=y          # 基础IPSec内核模块（核心）
CONFIG_PACKAGE_kmod-ipsec4=y         # IPv4 IPSec 内核模块（主流场景必选）
CONFIG_PACKAGE_kmod-ipsec6=y         # IPv6 IPSec 内核模块（无需IPv6可注释/删除）
CONFIG_PACKAGE_kmod-xfrm-user=y      # XFRM 用户空间接口（ipsec-tools 依赖）
CONFIG_PACKAGE_kmod-xfrm-algo=y      # XFRM 加密算法模块（加密解密基础）

# ==================== 辅助依赖（网络转发/认证，必选） ====================
CONFIG_PACKAGE_ppp=y                 # 点到点协议（L2TP 会话建立依赖）
CONFIG_PACKAGE_ppp-mod-pppoe=y       # PPPoE 模块（兼容网络转发场景）
CONFIG_PACKAGE_libopenssl=y          # 加密算法库（ipsec-tools/xl2tpd 加密依赖）
CONFIG_PACKAGE_libpam=y              # 认证模块（部分版本用户认证依赖）
